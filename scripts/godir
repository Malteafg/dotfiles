#!/bin/bash

HOME_DIR=""
HOME_PATH=""
EXCLUDED_DIRS=""

OPTIND=1

while getopts ":hE" opt; do
    case $opt in
        h) 
            HOME_DIR="--base-directory $HOME"
            HOME_PATH="$HOME/"
            ;;
        E)
            EXCLUDED_DIRS="-E .cache/ -E .cargo/ -E .wine/drive_c/ -E .config/google-chrome/ -E .config/discord/"
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit
            ;;
    esac
done

GOTO_DIR=$HOME_PATH$(fd $HOME_DIR -t d -H -I $EXCLUDED_DIRS | fzf --preview="tree -L 1 $HOME_PATH{}")
(($?)) || cd "$GOTO_DIR"
