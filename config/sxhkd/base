#==============================================================================
# BASE CONFIG

# LAUNCH PROGRAMS
super + Return
	$TERMI

F12
    menu

super + shift + Return
    ofwrapper -hend

super + g
    brave

super + {shift +, ctrl +} g
    google-chrome-stable {_,-incognito}

super + {_, shift +} space
    ofwrapper {-hen,-n}

super + {_, shift +} quote
    alacritty --class float,float {-e python3,_}

# MANAGE BSPWM
super + q
    dmenupower

XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

XF86AudioMute
    amixer -D pipewire sset Master toggle

XF86AudioRaiseVolume
    amixer -D pipewire sset Master 5%+

XF86AudioLowerVolume
    amixer -D pipewire sset Master 5%-

# MOVEMENT
# swap places with biggest window
#super + slash
    #bspc node -s biggest.window.local || \
    #bspc node -s last.local

# cancel the preselection for the focused node
super + Escape
    bspc node -p cancel

# move workspace to monitor
super + {comma,period}
    desk=`bspc query -D -d focused`; \
    DIR={prev,next}; \
    bspc desktop -m "$DIR"; \
    bspc monitor -f "$DIR"; \
    bspc monitor -o a s r t v j u y f w d o x; \
    bspc desktop -f $desk

# AUDIO
XF86AudioPlay
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
XF86AudioPrev
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
XF86AudioNext
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# alternate between the tiled and monocle layout
#super + p
	#bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + shift + p
	#bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
#super + g
	#bspc node -s biggest.window

