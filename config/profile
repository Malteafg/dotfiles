#! /bin/sh

export PATH="$HOME/dotfiles/scripts:$HOME/.local/bin:$PATH"

# Defaults
export TERMI="alacritty"
export EDITOR='vi -e'
export VISUAL='nvim'
export BROWSER="/usr/bin/brave"

# Monitor setup
export WALLPAPER_DIR="$HOME/files/wallpapers"
export MON_CONF="$HOME/.local/share/monitorconf"
export MON_SCRIPT="$HOME/.local/share/monitorscript"

xset r rate 200 25

. "$HOME/.cargo/env"

# opam configuration
test -r /home/malte/.opam/opam-init/init.sh && . /home/malte/.opam/opam-init/init.sh > /dev/null 2> /dev/null || true
